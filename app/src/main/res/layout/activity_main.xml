<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="RedundantNamespace"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-223dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:text="Escolha um exercício"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEx1"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="Exercício 1 - Verificar idade"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEx2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Exercício 2 - Calculadora"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEx3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Exercício 3 - Cadastro de usuário"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEx4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Exercício 4 - Checkbox Nome"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEx5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Exercício 5 - Preferências"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>